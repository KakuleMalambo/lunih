
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  student
  company
  school
  admin
}
model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  // password String 
  firstName String 
  lastName String
  imageUrl String?
  clerkUserId String @unique
  role Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
